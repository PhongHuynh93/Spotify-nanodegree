<?xml version="1.0" encoding="utf-8"?>
<!--layout for one item in show top track-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_dark3"
    android:paddingBottom="@dimen/size_margin_show_top_track"
    android:paddingTop="@dimen/size_margin_show_top_track"
    tools:ignore="MissingPrefix">

    <!--number of track-->
    <TextView
        android:id="@+id/textview_number_of_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/margin_left_show_top_track_number"
        android:layout_marginTop="@dimen/size_margin_show_top_track"/>


    <!--the same baseline with number song-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_left_show_top_track_name_song"
        android:orientation="vertical">
        <!--song name-->
        <TextView
            android:id="@+id/textview_name_of_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white_solid"
            android:textSize="@dimen/textsize_small_12"/>

        <!--artist name-->
        <TextView
            android:id="@+id/textview_name_of_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_light2"
            android:textSize="@dimen/textsize_small_8"/>

    </LinearLayout>

