<?xml version="1.0" encoding="utf-8"?>
<!--todo anim 0.5s, zoom out x and y size of the view-->
<set xmlns:android="http://schemas.android.com/apk/res/android"
     android:ordering="together">
    <objectAnimator
        android:propertyName="scaleX"
        android:duration="@integer/main_anim_scale_duration"
        android:startOffset="@integer/main_anim_delay_button"
        android:valueTo="@integer/main_anim_full_reveal"/>
    <objectAnimator
        android:propertyName="scaleY"
        android:duration="@integer/main_anim_scale_duration"
        android:startOffset="@integer/main_anim_delay_button"
        android:valueTo="@integer/main_anim_full_reveal"/>
</set>