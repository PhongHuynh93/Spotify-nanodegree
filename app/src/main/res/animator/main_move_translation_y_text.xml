<?xml version="1.0" encoding="utf-8"?>
<!--todo anim 1s, move down 45dp after 0.5s-->
<set xmlns:android="http://schemas.android.com/apk/res/android"
     android:ordering="together">
    <objectAnimator
        android:propertyName="translationY"
        android:duration="@integer/main_anim_move_y_duration"
        android:interpolator="@android:anim/decelerate_interpolator"
        android:startOffset="@integer/main_anim_delay_text"
        android:valueTo="@dimen/margin_bottom_splash_translation_y_headphone"/>
    <!--alpha to make this text appear-->
    <objectAnimator
        android:propertyName="alpha"
        android:duration="@integer/main_anim_move_y_duration"
        android:startOffset="@integer/main_anim_delay_text"
        android:valueTo="@integer/main_anim_full_reveal"/>
</set>